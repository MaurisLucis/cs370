<%= stylesheet_link_tag "tutors" %>
<div class="container emp-profile" style="margin-top: 25px;">

                <div class="row">
                    <div class="col-md-4">
                        <div class="profile-img">
                            <img src="/assets/user.svg" width="125px" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="profile-head">
                                    <h5 style="padding-top: 16px; font-size: 30px;">
                                        <%= @tutor.first_name %> <%= @tutor.last_name%>
                                    </h5>
                                    <h6 style="margin-bottom: 60px;">
                                        <%=@tutor.type_of_tutor%>
                                    </h6>
                        </div>
                    </div>
                    <div class="col-md-2"></div>
                </div>

                <div class="row">
                	<div class="col-md-12">
                		<label></label>
                	</div>
                </div>

                
                <div class="row">
                	<div class="col-md-12">
                		<label></label>
                	</div>
                </div>

                 <%= form_tag("/tutors/" + @tutor.id.to_s, method: :put) do%> 

	                 <div class="row">
		            		<div class="col-md-4">
		            			 <div class="profile-work">

		            			 	<p>Preferred Classes</p>
		            			 	<% @all_classes.each do |berkeley_class| %>
			            			 	<%if @classes.include?(berkeley_class)%>
			            			 		<!-- <div> -->
			            			 			<%= berkeley_class%>
					            			 	<input type="checkbox"  value=<%=true%> name=<%="classes[" + berkeley_class + "]" %> checked>
					            			 	<br>
			            			 		<!-- </div> -->
			            			 	<%else%>
			            			 		<div>
			            			 			<%= berkeley_class%>
				            			 		<input type="checkbox" value=<%=true%> name=<%="classes[" + berkeley_class + "]"%> >
				            			 		<br>
			            			 		</div>
			            			 	<%end%>
		            			 	<%end%>
		        				</div>
		            		</div>

		            		<div class="col-md-8">
					                <div class="row">
					                	<div class="col-md-6">
					                		<label for="tutor_email">Email</label>
					                	</div>
					                	<div class="col-md-6 field">
						                	<input type="text" value =<%=@tutor.email%> name="tutor[email]" id="tutor_email">
					                	</div>
					                </div>

				                	<div class="row">
					                    <div class="col-md-6">
					                        <label for="tutor_grade_level">Year</label>
					                    </div>
					                    <div class="col-md-6 field">
											<input type="text" value = <%=@tutor.grade_level%> name="tutor[grade_level]" id="tutor_grade_level">
					                    </div>
				                	</div>

				               		<div class="row">
					                    <div class="col-md-8">
					                        <label></label>
					                    </div>
				                	</div>


				                	<div class="row">
					                    <div class="col-md-7"></div>

					                    <div class="col-md-5 field">
											<input type="submit" value="Submit">
					                    </div>
					                </div>
		            		</div>
		            	</div>
	                
	            <%end%>

</div>

