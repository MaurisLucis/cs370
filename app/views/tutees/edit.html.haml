!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %title Dashboard

  %body#page-top
    / Navbar
    %nav.navbar.navbar-expand.navbar-dark.bg-dark.static-top
      %a.navbar-brand.mr-1{:href => tutee_path(@tutee)} #{@tutee.first_name + " " + @tutee.last_name}
      %button#sidebarToggle.btn.btn-link.btn-sm.text-white.order-1.order-sm-0{:href => "#"}
        %i.fas.fa-bars
    / Navbar end

    #wrapper
      / Sidebar
      %ul.sidebar.navbar-nav
        %li.nav-item.active
          %a.nav-link{:href => tutee_path(@tutee)}
            %i.fas.fa-fw.fa-tachometer-alt
            %span Dashboard
        %li.nav-item
          %a.nav-link{:href => edit_tutee_path(@tutee)}
            %i.fas.fa-fw.fa-folder
            %span Edit Info
        %li.nav-item
          %a.nav-link{:href => "charts.html"}
            %i.fas.fa-fw.fa-chart-area
            %span Request
        %li.nav-item
          %a.nav-link{:href => "tables.html"}
            %i.fas.fa-fw.fa-table
            %span History
      / Sidebar end

      #content-wrapper
        .container-fluid

          / Breadcrumbs
          %ol.breadcrumb
            %li.breadcrumb-item
              %a{:href => "#"} User Information
            %li.breadcrumb-item.active Edit

          / Area Chart Example
          .card.mb-3
            .card-header
              %i.fas.fa-chart-area
              Edit info you wish to change.
            .card-body
              - if flash[:message]
                .alert.alert-danger
                  %span.error= flash[:message]
              %canvas#myAreaChart{:height => "30", :width => "100%"}
              = form_tag tutee_path(@tutee), :method => :put, class: 'container' do
                .form-row
                  .form-group.col-md-4
                    = label :tutee, :first_name, 'First Name:'
                    = text_field :tutee, 'first_name', class: "form-control", :placeholder => "Jane"
                  .form-group.col-md-4
                    = label :tutee, :last_name, 'Last Name:'
                    = text_field :tutee, 'last_name', class: "form-control", :placeholder => "Doe"
                .form-row
                  .form-group.col-md-2
                    = label :tutee, :birthdate, "Birthdate:"
                    = date_field :tutee, 'birthdate',class: "form-control", :placeholder => "MM/DD/YYYY"
                  .form-group.col-md-2
                    = label :tutee, :gender, 'Gender:'
                    = select :tutee, :gender, %w(female male nonbinary prefer\ not\ to\ say), {}, class: "form-control"
                  .form-group.col-md-2
                    = label :tutee, :pronoun, "Pronouns:"
                    = select :tutee, :pronoun, %w(he/his she/her they/their),{} , class: 'form-control'
                  .form-group.col-md-2
                    = label :tutee, :ethnicity, 'Ethnicity:'
                    = select :tutee, :ethnicity, %w(Asian Black/African Caucasian Hispanic/Latinx Native\ American Pacific\ Islander mixed other),{} , class: 'form-control'
                .form-row
                  .form-group.col-md-4
                    = label :tutee, :email, "Email:"
                    = email_field :tutee, :email, class: 'form-control', :placeholder => 'Email@berkeley.edu'
                  .form-group.col-md-4
                    = label :tutee, :sid, "Student SID:"
                    = number_field :tutee, 'sid', class: 'form-control', :placeholder => '123456789'
                .form-row
                  .form-group.col-md-2
                    = label :tutee, :major, 'Major:'
                    = select :tutee, :major, %w(EECS CS other), {}, class: 'form-control'
                  .form-group.col-md-2
                    = label :tutee, :dsp, 'DSP?'
                    = select :tutee, :dsp, %w(No Yes), {}, class: 'form-control'
                  .form-group.col-md-2
                    = label :tutee, :transfer, 'Transfer Student?'
                    = select :tutee, :transfer,  %w(No Yes), {}, class: 'form-control'
                  .form-group.col-md-2
                    = label :tutee, :year, 'Year:'
                    = select :tutee, :year, %w(freshman sophmore junior senior graduate PhD),  {}, class: 'form-control'
                .form-row
                  .form-group.col-md-8
                    = label :tutee, :privilege, "Are you a CS Scholar if so for what class, if you have to think about it just mark no."
                    = select :tutee, :privilege, %w(No cs61a cs61b cs61c cs70),  {}, class: 'form-control'

                = submit_tag 'Save Changes', class: 'btn btn-primary'
            .card-footer.small.text-muted Updated yesterday at 11:59 PM

        / Sticky Footer
        %footer.sticky-footer
          .container.my-auto
            .copyright.text-center.my-auto
              %span Copyright Â© UC Berkeley 2019
