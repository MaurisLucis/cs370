!!!
%html{:lang => 'en'}
  %head
    %meta{:content => 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type'}/
    %meta{:charset => 'utf-8'}/
    %meta{:content => 'IE=edge', 'http-equiv' => 'X-UA-Compatible'}/
    %meta{:content => 'width=device-width, initial-scale=1, shrink-to-fit=no', :name => 'viewport'}/
    %meta{:content => '', :name => 'description'}/
    %meta{:content => '', :name => 'author'}/
    %title Dashboard

  %body#page-top

    / Navbar
    %nav.navbar.navbar-expand.navbar-dark.bg-dark.static-top
      %a.navbar-brand.mr-1.glyphicon.glyphicon-user{:href => tutee_path(@tutee)} #{@tutee.first_name + ' ' + @tutee.last_name}

    / Navbar end
    - if flash[:message]
      .alert.alert-danger
        %span.error= flash[:message]

    #wrapper
      / Sidebar
      %ul.sidebar.navbar-nav
        %li.nav-item
          %a.nav-link{:href => tutee_path(@tutee)}
            %span.glyphicon.glyphicon-dashboard
            %span Dashboard
        %li.nav-item
          %a.nav-link{:href => edit_tutee_path(@tutee)}
            %span.glyphicon.glyphicon-folder-close
            %span Edit Info
        %li.nav-item
          %a.nav-link{:href => new_tutee_request_path(@tutee)}
            %span.glyphicon.glyphicon-pencil
            %span Request
        %li.nav-item
          %a.nav-link{:href => request_history_tutee_path(@tutee)}
            %span.glyphicon.glyphicon-list-alt
            %span History
        %li.nav-item.active
          %a.nav-link{:href => tutee_evaluations_path(@tutee)}
            -if true
              %span.glyphicon.glyphicon-edit
            -else
              %span.glyphicon.glyphicon-check
            %span Evaluation
        %li.nav-item
          %a.nav-link{:href => tutees_path}
            %span.glyphicon.glyphicon-off
            %span Logout
      / Sidebar end

      #content-wrapper
        .container-fluid

          / Breadcrumbs
          %ol.breadcrumb
            %li.breadcrumb-item
              %a{:href => '#'} Evaluation
            %li.breadcrumb-item.active Overview

          / DataTables Example
          .card.mb-3
            .card-header
              %span.glyphicon.glyphicon-list-alt Evaluation
            .card-body
              .table-responsive
                %table#dataTable.table.table-bordered{:cellspacing => '0', :width => '100%'}
                  %thead
                    %tr
                      %th Status
                      %th Meeting id
                      %th created date
                      %th edit
                    %tfoot
                      %tr
                        %th Status
                        %th Meeting id
                        %th created date
                        %th edit
                  %tbody
                    - @evaluations.each do |evaluation|
                      %tr
                        %td= evaluation.status
                        %td= evaluation.meeting_id
                        %td= evaluation.created_at
                        %td= link_to 'edit', edit_tutee_evaluation_path(@tutee, evaluation)
            .card-footer.small.text-muted Updated yesterday at 11:59 PM
        / /.container-fluid
        / Sticky Footer
        %footer.sticky-footer
          .container.my-auto
            .copyright.text-center.my-auto
              %span Copyright Â© UC Berkeley 2019
